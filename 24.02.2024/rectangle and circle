#include<stdio.h>
int main(){
    float len,bre,r,aor,por,aoc,coc,pi=3.14;
    printf("enter the length and breadth of the  rectangle:");
    scanf("%f%f",&len,&bre);
    aor=len*bre;
    por=2*(len*bre);
    printf("enter the radius of the circle:");
    scanf("%f",&r);
    aoc=pi*(r*r);
    coc=2*pi*r;
    printf("The area of the rectangle=%f \n",aor);
    printf("The perimeter of the rectangle=%f \n",por);
    printf("The area of the circle=%f \n",aoc);
    printf("The circummference of the circle=%f \n",coc);
}

