#include <stdio.h>
#include<math.h>

int main()
{
   float a;
   printf("enter a number:");
   scanf("%f",&a);
   if(a>0){
       printf("a is positive");
   }
   else if(a<0){
       printf("a is negative");
   }
   else{
       printf("a is zero");
   }
}



