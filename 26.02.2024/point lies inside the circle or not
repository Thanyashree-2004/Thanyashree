#include <stdio.h>
#include <math.h>

int main()
{
   float x_point,x_center,y_point,y_center,radius,distance;
   printf("enter the x-coordinates of center of the circle:");
   scanf("%f",&x_center);
   printf("enter the y-coordinates of center of the circle:");
   scanf("%f",&y_center);
   printf("enter the x-coordinates of point of the circle:");
   scanf("%f",&x_point); 
   printf("enter the y-coordinates of point of the circle:");
   scanf("%f",&x_point);
   printf("enter the radius of the circle:");
   scanf("%f",&radius);
   printf("the radius is %f\n",radius);
   distance=sqrt(pow(x_point-x_center,2)+(pow(y_point-y_center,2)));
   printf("the distance is %f\n",distance);
   if (distance<radius){
       printf("the point is within the circle");
   }
   else{
       printf("the out is outside the circle");
   }
   
   
}

o/p:
enter the x-coordinates of point of the circle:60
enter the y-coordinates of point of the circle:90
enter the radius of the circle:2
the radius is 2.000000
the distance is 76.157730
the out is outside the circle

